@import 'nib'

$fontBase = 'bree_rgbold', Arial;

.clearfix
  clearfix()

body
  font-family $fontBase
  font-smoothing(antialiased)
  font-size 1em
  width 100%
  height 100%
  
.fade-in-page
  animation fade-in ease-in 2s both

@keyframes fade-in {
  0% {
    opacity: 0
  }
  100% {
    opacity: 1
  }
}

li
  list-style none
  

